<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <h2><%= link_to("#{task.title}", task_path(task.id)) %></h2>
  <%= link_to "Delete",
            task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>
